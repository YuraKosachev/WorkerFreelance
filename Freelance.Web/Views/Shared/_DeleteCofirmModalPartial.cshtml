@model IndexState
<div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Удаление</h4>
            </div>
            @using (Html.BeginForm("Delete", "Category", Model, FormMethod.Post, new { @class = "deleteForm" }))
            {
                <div class="modal-body">

                    @Html.Hidden("id")

                    Вы хотите удалить?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                    <button type="submit" class="btn btn-primary" data-button-role="confirmed" data-loading-text="Working...">Подтвердить</button>
                </div>
            }
        </div>
    </div>
</div>
