<div class="modal fade" id="OfferCreate" tabindex="-1" role="dialog" aria-labelledby="OfferCreateLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Бронирование</h4>
            </div>
            <div class="modal-body">
               
                <input type="hidden" name="UrlErrorScr" value="@Url.Action("Index","Home")"/>
                <input type="hidden" name="CreateOffer" value="@Url.Action("Create","Offer")" />

               

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">

                                <div class='input-group date time'>
                                    @Html.TextBox("Time", new { }, new { @class = "form-control", placeholder = "Выберите время" })
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-time"></span>
                                    </span>
                                </div>

                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class='input-group date dayofweek'>
                                    @Html.TextBox("Date", new { }, new { @class = "form-control", placeholder = "Выберите дату" })
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar">
                                        </span>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group col-md-12">
                            @Html.TextArea("Description", "", 5, 101, new { @class = "form-control", placeholder = "Введите описание необходимой работы" })
                        </div>
                    </div>




                

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                <button type="button" class="btn btn-primary"  data-loading-text="Бронирование..." autocomplete="off" data-bt-role="submit">Бронировать</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

