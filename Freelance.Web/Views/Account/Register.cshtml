@model Freelance.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}

 <!--Page Cover-->
<section class="row page-cover" data-bgimage="/upload/app/page-cover/registration.png">
    <div class="row m0">
        <div class="container">

            <h2 class="page-title" style="color:white;">Регистрация</h2>

        </div>

    </div>
</section>
<br/>
<section style="margin-bottom:40px;">
    <div class="row checkout-form">
        <div class="col-md-offset-3 col-md-6 col-xs-12">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary("", new { @class = "text-danger" })


                <h3 class="checkout-heading">Личные данные</h3>
                <div class="row" >
                    <div class="col-md-11 col-md-offset-1 col-xs-12">
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control input-lg", placeholder = "Введите имя" })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Surname, new { @class = "form-control input-lg", placeholder = "Введите фамилию" })
                        @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })

                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control input-lg", placeholder = "Введите номер телефона +375" })
                        @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                    </div>
                        </div>
               </div>
               <br/>
                <h3 class="checkout-heading">Данные для аккаунта</h3>
                <div class="row">
                    <div class="col-md-11 col-md-offset-1 col-xs-12">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Role, new { @class = "control-label" })
                            @Html.DropDownListFor(m => m.Role, new SelectList(Model.Roles, "key", "value", Model.Role), new { @class = "form-control input-lg" })
                        </div>

                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg", placeholder = "Введите email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", placeholder = "Введите пароль" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">

                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-lg", placeholder = "Подтвердите пароль" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <input type="submit" class="btn btn-default pull-right" value="Регистрация" />
                    </div>
                    }
                </div>
    </div>
    </section>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
