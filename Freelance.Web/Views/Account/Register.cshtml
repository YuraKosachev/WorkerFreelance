@model Freelance.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}

<h2>@ViewBag.Title.</h2>
<h4>Создайте новую учетную запись.</h4>
<hr />
<div class="row">
    <div class="col-md-offset-3 col-md-6 col-xs-12">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.Role, new { @class = "control-label" })
                    @Html.DropDownListFor(m => m.Role, new SelectList(Model.Roles, "key", "value", Model.Role), new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Введите имя" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
               
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", placeholder = "Введите фамилию" })
                @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })
                
            </div>

            <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Введите email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" , placeholder = "Введите номер телефона +375" })
                    @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Введите пароль" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
              
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Подтвердите пароль" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>



            <div class="form-group">
                    <input type="submit" class="btn btn-default pull-right" value="Регистрация" />
            </div>
        }
        </div>
    </div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
