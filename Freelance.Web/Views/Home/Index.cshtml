@{ 
    var i = 0;
    var count = Model.Count();
}

@while (i < count)
{
    <div class="row">
        @for (var j = 0; j < 4; j++, i++)
        {
            if (i == count)
            {
                break;
            }


            <div class="col-sm-3 col-md-3">
                <div class="thumbnail eq">
                    @Html.Image(Model[i].ImageName, "upload/app", HelperImageExtension.Holder(146, 155), new { data_element_role = "imageContainer" })
                    <div class="caption">
                        <h4>@Model[i].NameCategory</h4>
                        <p>@Model[i].DescriptionCategory</p>
                    </div>
                </div>
            </div>
        }
    </div>
    <br/>

}
       
